async function checkSession() {
    try {
        console.log('Verificando sesi√≥n...');
        updateDebugInfo('Verificando sesi√≥n...');
        
        const response = await fetch('php/verificar_sesion.php');
        const data = await response.json();
        
        console.log('Respuesta de sesi√≥n:', data);
        updateDebugInfo('Sesi√≥n verificada: ' + (data.authenticated ? 'Autenticado' : 'No autenticado'));
        
        if (data.authenticated) {
            currentUser = data.user;
            console.log('Usuario autenticado:', currentUser);
            updateDebugInfo('Cargando p√°gina de producci√≥n...');
            loadProduccionPage();
        } else {
            console.log('Usuario no autenticado, redirigiendo a login');
            updateDebugInfo('Redirigiendo al login...');
            window.location.href = '';
        }
    } catch (error) {
        console.error('Error checking session:', error);
        updateDebugInfo('Error de conexi√≥n: ' + error.message);
        showToast('Error de conexi√≥n. Redirigiendo al login...', 'error');
        setTimeout(() => {
            window.location.href = '';
        }, 2000);
    }
}

function updateDebugInfo(message) {
